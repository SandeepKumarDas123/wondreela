<% layout("/layouts/boiler") %>

  <style>
    #filters {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      opacity: 0.5;
    }

    .filter:hover {
      opacity: 1;
      cursor:pointer;
    }

    .filter p {
      font-size: 0.9rem;
    }

    .tax-info {
      display: none;
    }
    .tax-toggle{
      /* border: 2px solid black; */
      border-radius: 1rem;
      height: 50px;
      padding: 0.9rem;
      display: flex;
      align-items: center;
      box-shadow: 1px 1px 4px black;
    }
  </style>

  <body>

    <!-- <h1> Wondrella welcomes you</h1> -->
    <div id="filters" class="sticky-auto">
      <div class="filter">
        <div><i class="fa-solid fa-fire"> </i></div>
        <p> Trending </p>
      </div>

      <a href="/rooms">
        <div class="filter">
          <div><i class="fa-solid fa-bed"> </i></div>
          <p> Rooms </p>
        </div>
      </a>



      <a href="/IconicCities">
        <div class="filter">
          <div><i class="fa-solid fa-mountain-city"> </i></div>
          <p> Iconic cities </p>
        </div>
      </a>

      <a href="/Mountain">
        <div class="filter">
          <div><i class="fa-solid fa-mountain"> </i></div>
          <p> Mountain </p>
        </div>
      </a>

      <a href="/Castles">
        <div class="filter">
          <div><i class="fa-solid fa-fort-awesome"> </i></div>
          <p> Castles </p>
        </div>
      </a>
  
      <a href="/AmazingPools">
        <div class="filter">
          <div><i class="fa-solid fa-person-swimming"></i> </div>
          <p> Amazing pools </p>
        </div>
      </a>

      <a href="/Camping">
        <div class="filter">
          <div><i class="fa-solid fa-campground"> </i></div>
          <p> Camping </p>
        </div>
      </a>

      <a href="/farms">
        <div class="filter">
          <div><i class="fa-solid fa-wheat-awn"></i> </div>
          <p> farms </p>
        </div>
      </a>

      <a href="/Arctic">
        <div class="filter">
          <div><i class="fa-solid fa-snowflake"></i> </div>
          <p> Arctic </p>
        </div>
      </a>

      <div class="tax-toggle">
        <div class="form-check-reverse  form-switch">
          <input class="form-check-input" role="switch" type="checkbox" id="flexSwitchCheckDefault" />
          <label class="form-check-label" id="flexSwitchCheckDefault">Display total after Taxes</label>
        </div>

      </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2">

      <% for(list of lists) { %>
        <a href="/listings/<%=list._id %>" class="show-link">
          <div class="card listing-card">
            <img src="<%=list.image.url %>" class="card-img-top" style="height: 24rem; ; " alt="...">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b>
                  <%=list.title %>
                </b> <br>
                &#8377; <%= list.price.toLocaleString("en-IN") %> /night
                 <span > <i class="tax-info"> &nbsp; +18% GST</i></span>
              </p>
              <!-- <%=list.location %>
                    <%=list.country %></p> -->
            </div>
          </div>
        </a>
        <% } %>







    </div>

    <script>
      let priceBtn = document.getElementById('flexSwitchCheckDefault')
      priceBtn.addEventListener("click", () => {
        console.log("clicked")
        let tax = document.getElementsByClassName("tax-info")
        
       
        for (info of tax) {
          if (info.style.display != "inline"){
            info.style.display = "inline"
          }
          else {
            info.style.display = "none"
          }
        } 
      })

    </script>
 

