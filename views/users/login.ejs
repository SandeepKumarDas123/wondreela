<style>
#login{
 border: 2px solid rgb(93, 171, 240);
 background-color: rgb(240, 248, 257);
 border-radius: 20px;
 width: 800px;
 margin-left:300px ;
 height: 29rem;

}
#login:hover{
  box-shadow: 2px 2px 4px  black;

}
</style>

<% layout("/layouts/boiler") %>
<div style="display: flex; align-items: center; ">
 <div class="row mt-3 " id="login">
  <br>
    
    <div class="col-7 offset-3">
      <h2  class="col-6 offset-3 mb-2" style="color: rgb(93, 171, 240);"> <b> <u>login To wondurlust </u></b></h2><br>
      <form action="/login" method="post" novalidate class="needs-validation">
        <div class="mb-3">
            <label class="form-label" for="username">Enter username</label> 
            <input type="text" class="form-control"  placeholder="eg.  username " id="username" name="username" required />
           
        </div>
        <div class="mb-3">
            <label class="form-label" for="password">Enter password</label> 
            <input type="text" class="form-control"  placeholder="eg. abc@123 " id="password" name="password" required />
        </div>
        <button class="btn btn-outline-info"> Login </button>

      </form>
      <br><br>
      <p> Don't Have an Acount ? <a href="/signup"> SignUp Here</a></p>
    </div>
 </div>
</div>