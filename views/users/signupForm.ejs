<style>
  #signup{
   border: 2px solid rgb(93, 171, 240);
   background-color: rgb(240, 248, 257);
   border-radius: 20px;
   width: 800px;
   margin-left:300px ;
   height: 30rem;
  
  }
  #signup:hover{
    box-shadow: 2px 2px 4px  black;
  
  }
  </style>
  


<% layout("/layouts/boiler") %>
<div style="display: flex; align-items: center; ">
 <div class="row mt-3" id="signup">
    <div class="col-6 offset-3">
      <form action="/signup" method="post" novalidate class="needs-validation">
        <h2  class="col-6 offset-3 mb-2" style="color: rgb(93, 171, 240)"> <b><u>Signup Here </u></b></h2><br>
        <div class="mb-3">
            <label class="form-label" for="username">Enter username</label> 
            <input type="text" class="form-control"  placeholder="eg.  username " id="username" name="username" required />
            <div class="invalid-feedback"> please enter a valid user name</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="email">Enter Email</label> 
            <input type="text" class="form-control"  placeholder="eg. abc@gmail.com " id="email" name="email" required />
            <div class="invalid-feedback"> please enter a valid email</div>
        </div>

        <div class="mb-3">
            <label class="form-label" for="password">Enter password</label> 
            <input type="text" class="form-control"  placeholder="eg. abc@123 " id="password" name="password" required />
            <div class="invalid-feedback"> please enter a strong password</div>
        </div>

        <button class="btn btn-outline-info"> SignUp</button>
      </form>
      <br>
      <p>  Already Have an Acount ? <a href="/login"> Login Here</a></p>
    </div>
 </div>
</div>
